<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

   

    <Style x:Key="GridViewColumnStyle" TargetType="telerik:GridViewDataColumn">
        <Setter Property="Header" Value="{Binding Header}" />
        <Setter Property="IsVisible" Value="{Binding IsVisible}" />
        <Setter Property="IsReadOnly" Value="{Binding IsReadOnly}" />
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
        <Setter Property="DataType" Value="{Binding DataType}" />
    </Style>

    <Style x:Key="GridViewCellStyle" TargetType="{x:Type telerik:GridViewCell}">
        <Setter Property="Background" Value="{Binding Background}"/>
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
    </Style>
    
    <DataTemplate x:Key="DateTimeColumnCellEditTemplate">
        <telerik:RadDateTimePicker 
            TimeInterval="00:15" 
            InputMode="DatePicker" SelectedValue="{Binding Established, Mode=TwoWay}"/>
    </DataTemplate>
    <DataTemplate x:Key="ChartColumnCellEditTemplate">
        <telerik:RadCartesianChart Background="Bisque">
            <telerik:RadCartesianChart.VerticalAxis>
                <telerik:LinearAxis/>
            </telerik:RadCartesianChart.VerticalAxis>
            <telerik:RadCartesianChart.HorizontalAxis>
                <telerik:CategoricalAxis/>
            </telerik:RadCartesianChart.HorizontalAxis>
            <telerik:RadCartesianChart.Series>
                <telerik:LineSeries ItemsSource="{Binding ChartCollection}" ValueBinding="Value" CategoryBinding="Category"/>
            </telerik:RadCartesianChart.Series>
        </telerik:RadCartesianChart>
    </DataTemplate>

    <DataTemplate x:Key="eee"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    >

        <telerik:RadCartesianChart Background="Bisque" EmptyContent="NoData">
            <telerik:RadCartesianChart.VerticalAxis>
                <telerik:LinearAxis />
            </telerik:RadCartesianChart.VerticalAxis>

            <telerik:RadCartesianChart.HorizontalAxis>
                <telerik:CategoricalAxis />
            </telerik:RadCartesianChart.HorizontalAxis>

            <telerik:RadCartesianChart.Series>
                <telerik:LineSeries 
                                ItemsSource = "{ Binding Chart, Mode = TwoWay }" 
                                ValueBinding = "Value" 
                                CategoryBinding = "Category" 
                            />
            </telerik:RadCartesianChart.Series>
        </telerik:RadCartesianChart>
    </DataTemplate>

